<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- Last Transaction / Hidden by default -->

    <TextView
        android:id="@+id/id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- ListRow Left side Thumbnail image -->

    <TextView
        android:id="@+id/tdQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tdIProduct"
        android:text="Client Address"
        android:textColor="#040404"
        android:textSize="12dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/transactionCoordinate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tdQuantity"
        android:text="Coordinate"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/transactionDateTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transactionCoordinate"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transactionCoordinate"
        android:text="Date Time"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tdIProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tdQuantity"
        android:layout_alignParentTop="true"
        android:text="CLient Name"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/ammount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transactionDateTime"
        android:layout_below="@+id/transactionDateTime"
        android:text="TextView"
        android:textColor="#990000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageViewCobroLIst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ammount"
        android:layout_alignRight="@+id/transactionCoordinate"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>